{
  "name": "@reduct/component",
  "description": "A prototypical class that makes it easy to create Components with nodes, a powerfull instance configuration system and a react-like API.",
  "main": "dist/component.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "browserify src/component.js -o dist/component.js --standalone reduct.Component -t [ babelify --stage 0 ]",
    "lint": "xo src/**/*.js",
    "mocha": "export TEST=true && find ./src -name '*.spec.js' | xargs istanbul cover -x *.spec.js _mocha -- -R spec --compilers js:babel/register",
    "test": "npm run lint && npm run mocha && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reduct/component.git"
  },
  "keywords": [
    "prototype",
    "class",
    "component",
    "inheritance",
    "react",
    "dom"
  ],
  "author": "reduct",
  "contributors": [
    {
      "name": "Tyll Weiß",
      "email": "inkdpixels@gmail.com",
      "url": "https://github.com/Inkdpixels/"
    },
    {
      "name": "André König",
      "email": "andre.koenig@posteo.de",
      "url": "https://github.com/akoenig/"
    },
    {
      "name": "Wilhelm Behncke",
      "url": "https://github.com/grebaldi"
    }
  ],
  "license": {
    "type": "MIT",
    "url": "http://www.opensource.org/licenses/mit-license.php"
  },
  "bugs": {
    "url": "https://github.com/reduct/component/issues"
  },
  "homepage": "https://github.com/reduct/component#readme",
  "devDependencies": {
    "@inkdpixels/commit-analyzer": "0.0.2",
    "@inkdpixels/release-notes-generator": "0.0.2",
    "@reduct/logger": "^1.0.2",
    "chai": "^3.4.1",
    "istanbul": "^0.4.0",
    "jsdom": "^7.0.2",
    "mocha": "^2.3.3",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "xo": "^0.10.1"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "mocha",
      "browser",
      "es6"
    ]
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  },
  "dependencies": {
    "babelify": "^6.4.0",
    "browserify": "^12.0.1"
  }
}
